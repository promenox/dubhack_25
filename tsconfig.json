{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["vite/client"],
    "baseUrl": "src",
    "paths": {
      "@core/*": ["core/*"],
      "@storage/*": ["storage/*"],
      "@tracker/*": ["tracker/*"],
      "@main/*": ["main/*"],
      "@ui/*": ["ui/*"],
      "@preload/*": ["preload/*"]
    }
  },
  "include": ["src/ui", "src/core", "src/storage", "src/tracker"],
  "exclude": ["dist", "node_modules"]
}
