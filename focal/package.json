{
  "name": "focal-productivity-tracker",
  "version": "1.0.0",
  "description": "Real-time productivity tracking app with LLM-powered scoring",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": ["productivity", "tracking", "electron", "llm"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "openai": "^4.20.0"
  },
  "build": {
    "appId": "com.focal.productivity-tracker",
    "productName": "Focal Productivity Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    }
  }
}
